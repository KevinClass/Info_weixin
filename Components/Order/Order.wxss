/* Components/Order/Order.wxss */
page {
  --serach-height: 30px;
}
.vieworder {
  /* background-color: blue; */
  height: 100%;
  /* border: solid 3px rgb(0, 0, 0); */
}
.search {
  position: fixed;
  left: 0px;
  top: 0px;
  display: flex;
  background-color: #FFFFFF;
  font-size: 17px;
  line-height: 30px;
  height: var(--serach-height);
}

.scroll-view {
  height: calc(100% - 30px);
  /* border: solid 3px rgb(69, 218, 69); */
}

.input-btn {
  border-radius:30px;
}

.v-input {
  border: solid 1px #D9D9D9;
  border-radius:30px;
  margin-left: 2px;
  width: calc(100vw - 62px);
}

.wx-input {
  cursor: auto;
  margin-left: 8px;
  display: block;
  height: 1.8rem;
  text-overflow: clip;
  overflow: hidden;
  width: 100%;
  white-space: nowrap;
  font-family: UICTFontTextStyleBody;
  min-height: 1.4rem;
}
.order-page {
  margin-top: var(--serach-height);
  height: calc(100%);
  /* border: solid 3px rgb(8, 24, 248); */
}

.order-item {
  height: 50px;
  border-top: solid 1px  #D9D9D9; 
  margin: 0 auto;
}
